<%= form_for(@bill, html: { class: 'new-bill-form' }) do |f| %>
  <div class="form-group">
    <%= f.label :notes, "Piezīmes:" %>
    <%= f.text_field :notes, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image, "Pievienot rēkinu:" %>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= link_to "Back to bills", root_url, class: 'btn-back' %>
    <%= f.submit "Apstiprināt", class: 'submit-button' %>
  </div>
<% end %>
